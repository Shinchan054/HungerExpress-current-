<html>
<head>
    <title>Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body style="background-color: #ffe7b4;">

  <header>
    <br>
    <div class="d-flex justify-content-start">
      <a href="/restaurant/home/<%=id%>" class="btn btn-primary" role="button" style="position: relative; transform:translate(5%,0%)">Go to Home</a>
     </div>
 <br>
    
    <div
      class="p-5 text-center bg-image"
      style="
        background-image: url(<%=url%>);
        height: 400px;
      "
    >
      <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="d-flex justify-content-center align-items-center h-100">
          <div class="text-white">
            <h1 class="mb-1"><%= title %></h1>
          </div>
        </div>
      </div>
    </div>

  </header>


    <section class="products" id="products">


               <%for(var i=0 ; i<cat.length ; i++ ) { %>
                <div class="d-flex justify-content-center">
                <h1 class ="catHeader" style="position: relative; transform:translate(15%,0%); border: solid; border-color: coral; background-color: antiquewhite;"> <%= cat[i] %> </h1>
                </div><br><br>
                <%for(var j=0 ; j<item[i].length ; j++ ) { %>

                  <div class="card" style="width: 19rem; position: relative; transform:translate(100%,0%); background-color: coral;">
                    <div>
                        <img src= <%="/images/"+img[i][j]+".png" %> height="200" width="300">
                        <div class="card-body">
                        <h2 class="card-title"><%= item[i][j].name %></h2>
                        <p class="card-text"> <%= item[i][j].description %> </p>
                        <p class="card-text"> <%= item[i][j].price %> bdt</p>
                        </div>
                    </div>
                        <div class="card-body style="position: relative; transform:translate(10%,0%)">
                          <button style="font-size:24px" class="availability-btn" data-item="<%=JSON.stringify(item[i][j])%>">Unavailable</button>
                        </div>
                </div>
                <br><br>
                <% } %>
                <% } %>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!-- <script src="/node_modules/axios/dist/axios.js"></script> -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/availability.js" type="module"></script>

    </body>
</html>