<html>
<head>
    <title>Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
</head>
<body>

  <header>  
    <div class="d-flex justify-content-start">
      <a class="btn btn-primary" href="/customer/home" role="button" style="position: relative; transform:translate(20%,50%)">Go to Home</a>
    </div>
   <div class="d-flex justify-content-end">
    <a class="btn btn-primary" href="/customer/cart" role="button" style="position: relative; transform:translate(-40%,-40%)">
      <img src="/images/cart.png" alt="cart" height="40" width="40">
      </a>
   </div>
    <div
      class="p-5 text-center bg-image"
      style="
        background-image: url(<%=url%>);
        height: 400px;
      "
    >
      <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="d-flex justify-content-center align-items-center h-100">
          <div class="text-white">
            <h1 class="mb-1" data-rid="<%=rest_id%>"><%= title %></h1>
          </div>
        </div>
      </div>
    </div>

  </header>


    <section class="products" id="products" data-cid="<%=cid%>">


               <%for(var i=0 ; i<cat.length ; i++ ) { %>
                <h1 class ="catHeader" style="position: relative; transform:translate(15%,0%)"> <%= cat[i] %> </h1>
                <br><br>
                <%for(var j=0 ; j<item[i].length ; j++ ) { %>
                <div class="card" style="width:18 rem;">
                      <div style="position: relative; transform:translate(20%,0%)">
                        <img src= <%="/images/"+img[i][j]+".png" %> height="200" width="300">
                        <div class="card-body">
                        <h2 class="card-title"><%= item[i][j].name %></h2>
                        <p class="card-text"> <%= item[i][j].description %> </p>
                        <p class="card-text"> <%= item[i][j].price %> bdt</p> 
                        </div>     
                        </div>
                        <div class="card-body" style="position: relative; transform:translate(20%,0%)">
                          <button style="font-size:24px" class="cart-btn" data-item="<%=JSON.stringify(item[i][j])%>">Add to cart <i class="fa fa-shopping-cart"></i></button>
                        </div>
                </div>

                <% } %>
                <% } %>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!-- <script src="/node_modules/axios/dist/axios.js"></script> -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/cartHandle.js" type="module"></script>
   
    </body>
</html>