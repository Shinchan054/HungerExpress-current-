                        }
            var maps = new google.maps.Map(document.getElementById("demo"), Options);
            var markers =
            new google.maps.Marker({position:latlng, map:maps, title:"You are here!"});
            var markers2 =
                        new google.maps.Marker({position:latlng1, map:maps, title:"You are here!"});
        }

             function showErr(error) {
              switch(error.code){
              case error.PERMISSION_DENIED:
             alert("User denied the request for Geolocation API.");
              break;
             case error.POSITION_UNAVAILABLE:
             alert("USer location information is unavailable.");
            break;
            case error.TIMEOUT:
            alert("The request to get user location timed out.");
            break;
