        function showPos(lat,lat1,lng,lng1){
              console.log("showPos");
            var latlng = new google.maps.LatLng(lat, lng);
            var Options = {
                center: latlng,
                zoom: 15,
                mapTypeControl: true,
                navigationControlOptions: {style:google.maps.NavigationControlStyle.SMALL}
            }
            var latlng1 = new google.maps.LatLng(lat1, lng1);
            var Options1 = {
                            center: latlng1,
